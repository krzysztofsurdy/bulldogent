# Tool operation approval configuration
#
# Controls which operations require human approval before execution.
# Only operations listed here require approval â€” unlisted operations execute immediately.
#
# Resolution order (most specific wins):
#   1. Project/entity override (projects.<KEY>)
#   2. Operation default (approval_group)
#
# Use ~ to explicitly exempt a project from an operation's default approval group.

jira:
  jira_delete_issue:
    approval_group: jira_admins

  jira_create_issue:
    approval_group: jira_admins
    projects:
      ALPHA: alpha_maintainers
      BETA: ~

  jira_get_issue:
    projects:
      ALPHA: alpha_maintainers

github:
  github_merge_pr:
    approval_group: github_admins

  github_create_issue:
    approval_group: github_admins
    projects:
      ACME/ALPHA: backend_maintainers
      ACME/BETA: ~

  github_publish_release:
    projects:
      ACME/ALPHA: release_managers
