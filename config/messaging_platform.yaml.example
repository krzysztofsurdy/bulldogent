# Messaging platform configuration
# Copy to messaging_platform.yaml and keep only the platforms you want to use.
# Only platforms present in the real file will be registered.

slack:
  llm_provider_env: PLATFORM_SLACK_LLM_PROVIDER
  bot_token_env: PLATFORM_SLACK_BOT_TOKEN
  app_token_env: PLATFORM_SLACK_APP_TOKEN
  reaction_acknowledged: bone
  reaction_handled: dog
  reaction_error: x
  reaction_approval: white_check_mark
  approval_groups:
    devops: [U12345, U67890]
    project-leads: [U11111, U22222]

teams:
  llm_provider_env: PLATFORM_TEAMS_LLM_PROVIDER
  app_id_env: PLATFORM_TEAMS_APP_ID
  app_password_env: PLATFORM_TEAMS_APP_PASSWORD
  reaction_acknowledged: "\U0001F440"
  reaction_handled: "\u2705"
  reaction_error: "\u274C"

discord:
  llm_provider_env: PLATFORM_DISCORD_LLM_PROVIDER
  bot_token_env: PLATFORM_DISCORD_BOT_TOKEN
  reaction_acknowledged: "\U0001F440"
  reaction_handled: "\u2705"
  reaction_error: "\u274C"

telegram:
  llm_provider_env: PLATFORM_TELEGRAM_LLM_PROVIDER
  bot_token_env: PLATFORM_TELEGRAM_BOT_TOKEN
  reaction_acknowledged: "\U0001F440"
  reaction_handled: "\u2705"
  reaction_error: "\u274C"
