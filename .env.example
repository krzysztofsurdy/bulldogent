# Foundation
ENVIRONMENT=dev

## Slack
PLATFORM_SLACK_LLM_PROVIDER=openai
PLATFORM_SLACK_BOT_TOKEN=xoxb-your-bot-token-here
PLATFORM_SLACK_APP_TOKEN=xapp-your-app-token-here

## Teams
PLATFORM_TEAMS_LLM_PROVIDER=bedrock
PLATFORM_TEAMS_APP_ID=your-teams-app-id
PLATFORM_TEAMS_APP_PASSWORD=your-teams-app-password

## Discord
PLATFORM_DISCORD_LLM_PROVIDER=openai
PLATFORM_DISCORD_BOT_TOKEN=your-discord-bot-token

## Telegram
PLATFORM_TELEGRAM_LLM_PROVIDER=openai
PLATFORM_TELEGRAM_BOT_TOKEN=your-telegram-bot-token

## OpenAI
PROVIDER_OPENAI_MODEL=gpt-4o-mini
PROVIDER_OPENAI_TEMPERATURE=0.7
PROVIDER_OPENAI_MAX_TOKENS=2000
PROVIDER_OPENAI_API_KEY=sk-xxx
# PROVIDER_OPENAI_API_URL=http://localhost:4000  # LiteLLM proxy, Ollama, etc.

## Bedrock
PROVIDER_BEDROCK_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
PROVIDER_BEDROCK_TEMPERATURE=0.7
PROVIDER_BEDROCK_MAX_TOKENS=2000
PROVIDER_BEDROCK_REGION=us-east-1
PROVIDER_BEDROCK_ANTHROPIC_VERSION=bedrock-2023-05-31
# PROVIDER_BEDROCK_API_URL=http://localhost:4566  # LocalStack endpoint

## Vertex
PROVIDER_VERTEX_MODEL=gemini-1.5-pro
PROVIDER_VERTEX_TEMPERATURE=0.7
PROVIDER_VERTEX_MAX_TOKENS=2000
PROVIDER_VERTEX_PROJECT_ID=your-gcp-project-id
PROVIDER_VERTEX_LOCATION=us-central1
# PROVIDER_VERTEX_API_URL=  # custom Vertex endpoint

# Tools
## Jira
TOOL_JIRA_URL=https://your-domain.atlassian.net
TOOL_JIRA_USERNAME=your-email@example.com
TOOL_JIRA_API_TOKEN=your-jira-api-token
